   global variables that will then be included in both the library and
   executables, providing a way to determine what version and features of
   MVAPICH were used with a particular library or executable. 
*/
#ifndef MPICHINFO_H_INCLUDED
#define MPICHINFO_H_INCLUDED

#define MVAPICH_CONFIGURE_ARGS_CLEAN "@CONFIGURE_ARGS_CLEAN@"
#define MVAPICH_VERSION_DATE "@MVAPICH_RELEASE_DATE@"
#define MVAPICH_DEVICE "@DEVICE@"
#define MVAPICH_COMPILER_CC "@CC@ @CFLAGS@"
#define MVAPICH_COMPILER_CXX "@CXX@ @CXXFLAGS@"
#define MVAPICH_COMPILER_F77 "@F77@ @FFLAGS@"
#define MVAPICH_COMPILER_FC "@FC@ @FCFLAGS@"
#define MVAPICH_CUSTOM_STRING "@MVAPICH_CUSTOM_STRING@"
#define MVAPICH_ABIVERSION "@ABIVERSION@"

#endif
